import pdfplumber
from pptx import Presentation
from pptx.util import Inches, Pt
from pptx.enum.text import PP_ALIGN
from PIL import Image
import io

def convert_pdf_to_ppt(pdf_path, ppt_path):
    # Create a PowerPoint presentation object
    prs = Presentation()
    
    # Open the PDF file
    with pdfplumber.open(pdf_path) as pdf:
        # Iterate over each page in the PDF
        for page_num, page in enumerate(pdf.pages):
            # Extract text from the page
            text = page.extract_text()

            # Add a slide to the presentation
            slide_layout = prs.slide_layouts[5]  # Choosing a blank layout
            slide = prs.slides.add_slide(slide_layout)
            title = slide.shapes.title
            title.text = f"Page {page_num + 1}"
            
            # Add text to the slide
            if text:
                left = Inches(1)
                top = Inches(1.5)
                width = Inches(8.5)
                height = Inches(5.5)
                textbox = slide.shapes.add_textbox(left, top, width, height)
                textbox_frame = textbox.text_frame
                p = textbox_frame.add_paragraph()
                p.text = text
                p.font.size = Pt(12)
                textbox_frame.word_wrap = True
            
            # Add images to the slide
            for img in page.images:
                # Calculate bounding box coordinates
                x0 = img['x0']
                x1 = img['x1']
                top = img['top']
                bottom = img['bottom']
                
                # Extract image from PDF page
                img_obj = page.to_image()
                img_cropped = img_obj.crop((x0, top, x1, bottom))

                # Convert cropped image to bytes
                image_stream = io.BytesIO()
                img_cropped.save(image_stream, format='PNG')
                image_stream.seek(0)

                # Add image to slide
                img_left = Inches(1)
                img_top = Inches(6.5)
                img_width = Inches(8)
                slide.shapes.add_picture(image_stream, img_left, img_top, img_width)
    
    # Save the presentation
    prs.save(ppt_path)
    print(f"Presentation saved to {ppt_path}")

# Usage example
pdf_path = "path/to/your/pdf_file.pdf"
ppt_path = "path/to/save/presentation.pptx"
convert_pdf_to_ppt(pdf_path, ppt_path)